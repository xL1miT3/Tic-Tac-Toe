<Homescreen>:
	name: "home"

	FloatLayout:
        canvas.before:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                pos: self.pos
                size: self.size

        StrokeButton:
            text: "1 VS COMPUTER"
            font_size: 25
            pos_hint: {"x": 0.25, "y": .6}
            size_hint: 0.5, 0.2
            on_press: root.singleplayer_mode()
        StrokeButton:
            text: "1 VS 1"
            font_size: 25
            pos_hint: {"x": 0.25, "y": .3}
            size_hint: 0.5, 0.2
            on_press: root.multiplayer()


